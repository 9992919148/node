<%- include('include/header') %>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <%- include('include/sidemenu') %>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <h1>Welcome, <%= data.username %>!</h1>
            <div>
                <button onclick="location.href='/profile'">View Profile</button>
            </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="content">
            <div class="card">
                <h3>Total Users</h3>
                <p><%= data.totalUsers %> users</p>
            </div>
            <div class="card">
                <h3>Active Sessions</h3>
                <p><%= data.activeSessions %> active sessions</p>
            </div>
            <div class="card">
                <h3>Pending Notifications</h3>
                <p><%= data.pendingNotifications %> notifications</p>
            </div>
        </div>
    </div>

</body>
<%- include('include/footer') %>
