<style>
    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
    }
    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ddd;
    }
    th {
        background-color: #f2f2f2;
    }
</style>
<%- include('include/header') %>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <%- include('include/sidemenu') %>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <div class="header">
            <h1>Welcome</h1>
            <div>
                <button onclick="location.href='/profile'">View Profile</button>
            </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="content">
            <table>
                <thead>
                    <tr>
                        <th>QID</th>
                        <th>Created By</th>
                        <th>HR Topic</th>
                        <th>Created_at</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(function(qry) { %>   <!-- Loop through each user in the users array -->
                        <tr>
                            <td><%= qry.qry_id %></td>           <!-- Display user ID -->
                            <td><%= qry.name %></td>         <!-- Display user Name -->
                            <td><%= qry.cat_desc %></td>        <!-- Display user Email -->
                            <td><%= qry.created_at %></td>
                            <td></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
<%- include('include/footer') %>
